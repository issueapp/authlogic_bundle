<%- title -%>

<% semantic_form_for @user, :url => activate_path(@user), :html => {:method => :post, :id => nil} do |f| %>
  <% f.inputs do %>
    <%= f.input :password, :label => :set_password %>
    <%= f.input :password_confirmation %>
    <%= f.input :openid_identifier, :label => openid_link %>
    <%= f.commit_button :activate, :name => nil %>
  <% end %>
<% end %>

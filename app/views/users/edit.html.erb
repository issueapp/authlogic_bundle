<% title t('users.titles.edit') %>

<% semantic_form_for @user, :url => account_path, :html => {:id => nil} do |f| %>
  <% f.inputs :basic_information do %>
    <%= f.input :login %>
    <%= f.input :email %>
  <% end %>
  <% f.inputs :authentication do %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :openid_identifier, :label => openid_link %>
  <% end %>
  <% f.inputs :preferences do %>
    <%= f.input :preferred_language, :as => :select, :collection => @languages_available, :include_blank => true %>
    <%= f.input :preferred_time_zone, :as => :time_zone, :include_blank => true %>
    <%# f.input :preferred_time_zone, :as => :select, :collection => ActiveSupport::TimeZone.all.map {|tz| [tz.to_s, tz.tzinfo.name] }, :include_blank => true %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button :name => nil %>
  <% end %>
<% end %>
